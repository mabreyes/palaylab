                            android:textSize="18sp"/>


                        <TextView
                            android:id="@+id/aRiceBlast"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-light"
