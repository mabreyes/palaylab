<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiseasesDefinition"
    android:background="@drawable/bg2">

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/baseline_arrow_back_white_48" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="About"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/gorditabold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView3">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="250dp">

    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/definition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/detectionStatistics"
        android:textSize="10dp"
        android:padding="10dp"
        android:background="@drawable/customshape"/>

        <TableRow
            android:layout_below="@id/viewpager"
            android:id="@+id/detectionStatistics"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/detection"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/border1"
                android:fontFamily="@font/gorditamedium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Detections"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/detectionText"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:textColor="#115533"
                android:padding="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="This Week"
                android:gravity="center"
                android:background="@drawable/customshape"
                android:fontFamily="@font/gorditamedium"
                />

        </TableRow>


    </RelativeLayout>
    </ScrollView>

</RelativeLayout>